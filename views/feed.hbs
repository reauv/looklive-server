<div class="feed-list">
    {{#each items}}
        <article class="feed-list__item" data-uuid="{{id}}">
            <img class="feed-list__item__image" src="{{ image.url }}">
            <img class="feed-list__item__avatar" src="{{ subject.avatar.url }}">
            <h2 class="feed-list__item__name">{{ subject.name }}</h2>
            <a href="appearance/{{id}}" class="link">
                <h1 class="c-feed-list__item__title">{{title}}</h1>
            </a>
        </article>
    {{/each}}
</div>
